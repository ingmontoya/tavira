apiVersion: apps/v1
kind: Deployment
metadata:
  name: tavira-app
spec:
  replicas: 1
  selector:
    matchLabels:
      app: tavira
  template:
    metadata:
      labels:
        app: tavira
    spec:
      volumes:
        - name: app-code
          emptyDir: {}
        - name: nginx-config
          configMap:
            name: tavira-nginx-config
      initContainers:
        - name: git-clone
          image: composer:2
          command:
            - sh
            - -c
            - |
              set -ex
              git clone --depth 1 https://github.com/ingmontoya/tavira.git /app
              cd /app
              composer install --no-dev --no-interaction --prefer-dist --optimize-autoloader
          volumeMounts:
            - name: app-code
              mountPath: /app
      containers:
        - name: php-fpm
          image: php:8.3-fpm
          workingDir: /var/www/html
          volumeMounts:
            - name: app-code
              mountPath: /var/www/html
          ports:
            - containerPort: 9000
        - name: nginx
          image: nginx:1.25-alpine
          ports:
            - containerPort: 80
          volumeMounts:
            - name: app-code
              mountPath: /var/www/html
            - name: nginx-config
              mountPath: /etc/nginx/conf.d
---
apiVersion: v1
kind: Service
metadata:
  name: tavira-nodeport
spec:
  type: NodePort
  selector:
    app: tavira
  ports:
    - port: 80
      targetPort: 80
      nodePort: 32051

